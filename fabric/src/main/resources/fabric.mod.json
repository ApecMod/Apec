{
  "schemaVersion": 1,
  "id": "apec",
  "version": "${version}",
  "name": "Apec",
  "description": "A GUI improvement mod for Hypixel Skyblock that enhances the in-game interface with HP/MP bars, custom scoreboard display, inventory traffic list, potion effects overlay, warning icons, and custom NPC GUIs.",
  "authors": [
    "Hexeption"
  ],
  "contact": {
    "homepage": "https://github.com/ApecMod/Apec",
    "sources": "https://github.com/ApecMod/Apec",
    "issues": "https://github.com/ApecMod/Apec/issues"
  },
  "license": "MPL-2.0",
  "icon": "assets/apec/icon.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      "uk.co.hexeption.fabric.apec.ApecFabric"
    ],
    "modmenu": [
      "uk.co.hexeption.fabric.apec.modmenu.ApecModMenuCompat"
    ]

  },
  "mixins": [
    "apec.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.16.10",
    "minecraft": "~1.21.4",
    "java": ">=21",
    "architectury": ">=15.0.1",
    "fabric-api": "*"
  },
  "suggests": {
    "another-mod": "*"
  }
}
